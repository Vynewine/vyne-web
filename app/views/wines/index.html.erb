<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Vintage</th>
<th>producer</th>
<th>subregion</th>
      <th>Area</th>
<th>appellation</th>
<th>type</th>
<th>grape</th>
      <th>Single estate</th>
      <th>Alcohol</th>
      <th>Sugar</th>
      <th>Acidity</th>
      <th>Ph</th>
<th>occasion</th>
<th>food</th>
<th>notes</th>
<th>allergies</th>
<th>maturation</th>
      <th>Vegetarian</th>
      <th>Vegan</th>
      <th>Organic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.vintage %></td>
<td> - <!-- producer --></td>
<td> - <!-- subregion --></td>
        <td><%= wine.area %></td>
<td> - <!-- appellation --></td>
<td> - <!-- type --></td>
<td> - <!-- grape --></td>
        <td><%= wine.single_estate %></td>
        <td><%= wine.alcohol %></td>
        <td><%= wine.sugar %></td>
        <td><%= wine.acidity %></td>
        <td><%= wine.ph %></td>
<td> - <!-- occasion --></td>
<td> - <!-- food --></td>
<td> - <!-- notes --></td>
<td> - <!-- allergies --></td>
<td> - <!-- maturation --></td>
        <td><%= wine.vegetarian %></td>
        <td><%= wine.vegan %></td>
        <td><%= wine.organic %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

