<h1>Listing statuses</h1>
<small>Be careful! This table is essential for the correct workflow of this system!</small>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.id %></td>
        <td><%= status.label %></td>

        <td class="button-wrapper">
          <%= link_to status do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_status_path(status) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to status, method: :delete, data: { confirm: 'Are you sure? This can REALLY mess things up!' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
