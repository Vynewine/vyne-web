<h1>Listing bottlings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bottlings.each do |bottling| %>
      <tr>
        <td><%= bottling.name %></td>
        <td><%= link_to 'Show', bottling %></td>
        <td><%= link_to 'Edit', edit_bottling_path(bottling) %></td>
        <td><%= link_to 'Destroy', bottling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

