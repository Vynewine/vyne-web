================================= -->
<section id="about" class="about-section section">

  <div class="container">

    <h2 class="section-heading text-center">Wine advice tailored to your evening</h2>

    <div class="about-row row">

      <!-- DESCRIPTION IMAGE -->
      <div class="about-image col-md-6" data-animation="fadeIn">
        <img src="<%= asset_path('landing/merchant.jpg') %>" alt="Description Image">
      </div>

      <!-- DESCRIPTION TEXT -->
      <div class="about-text col-md-6">
