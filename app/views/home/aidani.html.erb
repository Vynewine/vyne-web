  <a href="#how-it-works" class="hero-start-link anchor-link"><span class="fa fa-angle-double-down"></span></a>

</section>

<!-- HOW IT WORKS
================================= -->
<section id="how-it-works" class="how-it-works-section section">

  <div class="container-fluid">

    <h2 class="section-heading text-center">How it Works</h2>

    <div class="hiw-row row">

      <!-- HOW IT WORKS - ITEM 1 -->
      <div class="col-md-3 col-sm-6" data-animation="fadeIn">
        <div class="hiw-item">
          <img class="hiw-item-picture" src="<%= asset_path('landing/pairingalt@1x.jpg') %>"
               srcset="<%= asset_path('landing/pairingalt@2x.jpg') %> 2x" alt="Wine Pairing">

          <div class="hiw-item-text">
            <span class="hiw-item-icon">1</span>
            <h4 class="hiw-item-title">We understand your requirements</h4>

            <p class="hiw-item-description">Tell us about your <strong>meal</strong>, <strong>occasion</strong>
              or you can specify an <strong>exact wine</strong>.</p>
          </div>
        </div>
      </div>

      <!-- HOW IT WORKS - ITEM 2 -->
      <div class="col-md-3 col-sm-6" data-animation="fadeIn">
        <div class="hiw-item even">
          <img class="hiw-item-picture" src="<%= asset_path('landing/somm@1x.jpg') %>"
               srcset="<%= asset_path('landing/somm@2x.jpg') %> 2x" alt="Personal Sommelier">

          <div class="hiw-item-text">
            <span class="hiw-item-icon">2</span>
            <h4 class="hiw-item-title">Expert choice</h4>

            <p class="hiw-item-description">Based on your requirements, selected <strong>immediately</strong>
              by <strong>experts</strong> from local cellars.</p>
          </div>
        </div>
      </div>

      <div class="hidden-md hidden-lg clear"></div>

      <!-- HOW IT WORKS - ITEM 3 -->
      <div class="col-md-3 col-sm-6" data-animation="fadeIn">
        <div class="hiw-item">
          <img class="hiw-item-picture" src="<%= asset_path('landing/iphoneshot@1x.jpg') %>"
               srcset="<%= asset_path('landing/iphoneshot@2x.jpg') %> 2x"
               alt="">

          <div class="hiw-item-text">
            <span class="hiw-item-icon">3</span>
            <h4 class="hiw-item-title">Review selection</h4>

            <p class="hiw-item-description">You’ll see the selection in minutes & have an opportunity to
              <strong>review it</strong>. <br/>
              <em>Ask for something else if you want.</em></p>
          </div>
        </div>
      </div>

      <!-- HOW IT WORKS - ITEM 4 -->
      <div class="col-md-3 col-sm-6" data-animation="fadeIn">
        <div class="hiw-item even">
          <img class="hiw-item-picture" src="<%= asset_path('landing/delivery.jpg') %>" alt="">

          <div class="hiw-item-text">
            <span class="hiw-item-icon">4</span>
            <h4 class="hiw-item-title">Delivery</h4>

            <p class="hiw-item-description">Delivered fast! <br/>
              We’ll message you with a <strong>tracking map</strong>. <br/> <em>Watch your wine come towards you.</em>
            </p>
          </div>
        </div>
      </div>

    </div>

  </div>

</section>

