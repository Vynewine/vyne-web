<h1>Listing subregions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subregions.each do |subregion| %>
      <tr>
        <td><%= subregion.name %></td>
        <td><%= subregion.region.name %></td>
        <td><%= link_to 'Show', subregion %></td>
        <td><%= link_to 'Edit', edit_subregion_path(subregion) %></td>
        <td><%= link_to 'Destroy', subregion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

