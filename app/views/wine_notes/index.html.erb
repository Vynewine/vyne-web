<h1>Listing wine_notes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wine_notes.each do |wine_note| %>
      <tr>
        <td><%= wine_note.name %></td>
        <td><%= link_to 'Show', wine_note %></td>
        <td><%= link_to 'Edit', edit_wine_note_path(wine_note) %></td>
        <td><%= link_to 'Destroy', wine_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wine note', new_wine_note_path %>
