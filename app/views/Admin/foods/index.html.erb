<%= render :partial => "layouts/winemenu" %>

<h1>Listing foods</h1>

<table>
  <thead>
    <tr>
      <th>Parent</th>
      <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.parent %></td>
        <td><%= food.id %></td>
        <td><%= food.name %></td>
        <td class="button-wrapper">
          <%= link_to admin_food_path(food) do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_food_path(food) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_food_path(food), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New food', new_admin_food_path %>
