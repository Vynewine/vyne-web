<h1>Listing orders</h1>

<table border="1" class="list-table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Client</th>
      <th>Address</th>
      <th>Warehouse</th>
      <th>Advisor</th>
      <th>Wine</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="order <%= order.status.label.gsub( " ", "_" ) %>">
        <td><%= order.status.label %></td>
        <td><%= order.client_id %> - <%= order.client.name %></td>
        <td><%= order.address.postcode %></td>
        <td><%= order.warehouse ? order.warehouse.title : '' %></td>
        <td><%= order.advisor ? order.advisor.name : '' %></td>
        <td><%= order.wine ? order.wine.name : '' %></td>
        <td><%= order.quantity %></td>
        <td class="button-wrapper">
          <%= link_to admin_order_path(order) do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_order_path(order) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

