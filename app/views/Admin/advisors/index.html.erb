<div class="advisor-area">
    <div id="orders-header">
        <h2>Orders</h2>
        <a href="#" id="reload-orders">Reload orders</a>
    </div>
    
    order <input type="text" id="order_id" />
    wine <input type="text" id="wine_id" />
    warehouses <input type="text" id="warehouses_ids" />
    warehouse <input type="text" id="warehouse_id" />
    quote <input type="text" id="quote_id" />

    <div id="order-list"></div>
    <div id="wine-filters" style="display:none;">
        <input type="text" id="search" autocomplete="off" placeholder="Search wines..." />
        <input type="checkbox" id="tick-sing" name="single"     /><label for="single"    > Single estate</label>
        <input type="checkbox" id="tick-vegn" name="vegan"      /><label for="vegan"     >Vegan</label>
        <input type="checkbox" id="tick-orgc" name="organic"    /><label for="organic"   >Organic</label>
        <div style="float:right">
<% @categories.each do |category| %>
        <input type="checkbox" class="tick-category" name="tick-cat-<%= category.id %>" />
        <label for="tick-cat-<%= category.name %>">
            &pound;<%= category.price %>
            (<%= category.name.capitalize %>) 
        </label>
<% end %>
        </div>
    </div>
    <div id="wine-list" style="display:none;"></div>
</div>
<div id="confirmation-area" class="shadow" style="display:none;">
    <div id="confirmation-screen">
        <dl class="">
          <dt>Customer</dt>
          <dd id="confirm-name"></dd>
          <dt>Address</dt>
          <dd id="confirm-address"></dd>
          <dt>Wine</dt>
          <dd id="confirm-wine"></dd>
          <dt>Price</dt>
          <dd id="confirm-price"></dd>
        </dl>
        <p>Delivery options (estimations)</p>
        <div id="loading">
            <div style="height:19px"><%= image_tag "placeholders/top.gif", :alt => "Loading data..." %></div>
            <div style="height:44px"><%= image_tag "placeholders/middle.gif", :alt => "Loading data..." %></div>
            <div style="height:73px"><%= image_tag "placeholders/bottom.gif", :alt => "Loading data..." %></div>
            <br />
            <small>Loading delivery options...</small>
        </div>
        <ul id="delivery_quotes">
            <!-- <li><a href="#">10/02/2014 - 10:32 - Â£6.45</a></li> -->
        </ul>
        <div class="shadow-footer">
            <a href="#" id="cancel-confirmation">Cancel</a>
            <a href="#" id="confirm" class="disabled">Confirm</a>
        </div>
    </div>
</div>