<div style="height:100px;"></div>

<form action="updateorder.json" target="iframe" id="myform">

<textarea name="notification" id="notification">
{"notification": {"type": "booking_update","shutl_booking_reference": "abc","merchant_booking_reference": "MERCHANT_BOOKING_REFERENCE","uri": "https://api.shutl.co.uk/bookings/abc"}}
</textarea>
<input type="submit" />
</form>

<!-- <iframe name="iframe" src="updateorder.json" style="width:100%; height:500px; background:white;"></iframe> -->
<div id="response" style="background:white;">&nbsp;</div>

<script type="text/javascript">
(function(){ "use strict"; var doc = document;
doc.addEventListener('DOMContentLoaded', function() {

    $('#myform').submit(function(e) {
        e.preventDefault();
        var formData = $('#notification').val();
        console.log(formData);
var formattedData = formData.replace(/\\'/g, "'");
var jsonObj = JSON.parse(formattedData);
        $.ajax(
            {
                'type': 'post',
                'url': 'updateorder.json',
                'dataType': "json",
                'data': jsonObj //JSON.stringify(body)
            }
        ).done(function(html) {
            $('#response').html(html);
        });
    });

},false);
})();
</script>