<!-- HEADER
  ================================= -->
<header id="header" class="header-section section section-dark navbar navbar-fixed-top">

  <div class="container-fluid">

    <div class="navbar-header navbar-left">

      <!-- RESPONSIVE MENU BUTTON -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class="mini-cart" id="mini-cart" style="width: 46px; height: 46px; float: right !important;">
      </div>

      <!-- HEADER LOGO -->
      <% if controller_name == 'home' && action_name == 'index' %>

          <a class="navbar-logo navbar-brand anchor-link" href="#hero">
            <img src="<%= asset_path('logo@2x.png') %>" srcset="<%= asset_path('logo@2x.png') %> 2x" alt="Vyne">
          </a>

      <% else %>

          <a class="navbar-logo navbar-brand" href="/">
            <img src="<%= asset_path('logo@2x.png') %>" srcset="<%= asset_path('logo@2x.png') %> 2x" alt="Vyne">
          </a>

      <% end %>

    </div>

    <nav id="navigation" class="navigation navbar-collapse collapse navbar-right">

      <!-- NAVIGATION LINKS -->
      <ul id="header-nav" class="nav navbar-nav">


        <li><a href="#hero" class="hidden">Top</a></li>
        <li>
          <div class="mini-cart-uncollapsed" id="mini-cart-uncollapsed">
          </div>
        </li>
        <li><a href="/promo" class="external">Promo</a></li>
        <% if controller_name == 'home' && action_name == 'index' %>
            <li><a href="#how-it-works">How it Works</a></li>

            <li><a href="#about">Discover</a></li>
            <li class="hidden"><a href="#delivery">Delivery</a></li>
        <% else %>
            <li><a href="/#how-it-works" class="external">How it Works</a></li>
            <li><a href="/#about" class="external">Discover</a></li>
        <% end %>

        <% if user_signed_in? %>

            <li class="dropdown">
              <a href="#" class="external" data-toggle="dropdown" role="button" aria-expanded="false" id="user_navigation">
                <%= current_user.first_name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/account" class="external"><i class="fa fa-user"></i> Account</a></li>
                <li>
                  <%= link_to mywines_path, class: 'external' do %>
                      <i class="fa fa-briefcase"></i> My Wines
                  <% end %>
                </li>
                <li>
                  <%= link_to promo_index_path, class: 'external' do %>
                      <i class="fa fa-gift"></i> Promotions
                  <% end %>
                </li>
                <% if current_user.has_role?(:supplier) ||
                        current_user.has_role?(:admin) ||
                        current_user.has_role?(:superadmin)
                %>
                    <li>
                      <%= link_to admin_root_path, data: {no_turbolink: true}, class: 'external' do %>
                          <i class="fa fa-cog"></i> Admin
                      <% end %>
                    </li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to logout_path, :method => :delete, class: 'external', id: 'logout' do %>
                      <i class="fa fa-sign-out"></i> Sign Out
                  <% end %>
                </li>

              </ul>
            </li>

        <% else %>
            <li>
              <%= link_to 'Sign in', login_path, class: 'external' %>
            </li>
        <% end %>

        <% if params[:controller] == 'home' && action_name == 'index' %>
            <li class="header-action-button"><a href="#hero" class="btn btn-primary">Check Availability</a></li>
        <% else %>
            <li class="header-action-button"><a href="/" class="btn btn-primary" class="external">Check Availability</a>
            </li>
        <% end %>
      </ul>

    </nav>





  </div>
</header>