<!DOCTYPE html>
<html>
<head>
  <title>Vynz</title>
  <%= stylesheet_link_tag    'admin', 'token-input-facebook', media: 'all' %>
  <script>
    var admin = true;
  </script>
  <%= javascript_include_tag 'admin', 'jquery.tokeninput' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <ul class="top-menu left">
    <li><span>VYNZ Admin</span></li>
  <% if user_signed_in? %>
    <li><span><%= current_user.email %></span></li>
  <% end %>
  </ul>
  <ul class="top-menu right">
  <% if user_signed_in? %>
    <li><%= link_to "Sign out", logout_path, :method => :delete %></li>
  <% end %>
    <li><%= link_to 'Home', home_index_path %></li>
  </ul>
  <ul class="main-menu">
    <li><%= link_to 'Producers', admin_producers_path %></li>
    <li><%= link_to 'Regions', admin_regions_path %></li>
    <li><%= link_to 'Sub-regions', admin_subregions_path %></li>
    <li><%= link_to 'Grapes', admin_grapes_path %></li>
    <li><%= link_to 'Types', admin_types_path %></li>
    <li><%= link_to 'Bottlings', admin_bottlings_path %></li>
    <li><%= link_to 'Maturations', admin_maturations_path %></li>
    <li><%= link_to 'Allergies', admin_allergies_path %></li>
    <li><%= link_to 'Notes', admin_notes_path %></li>
    <li><%= link_to 'Foods', admin_foods_path %></li>
    <li><%= link_to 'Occasions', admin_occasions_path %></li>
    <li><%= link_to 'Appellations', admin_appellations_path %></li>
    <li><%= link_to 'Wines', admin_wines_path %></li>
    <li><%= link_to 'Advise', admin_advisors_path %></li>
  <% if current_user.has_role?(:superadmin) %>
    <li class="superadmin"><%= link_to 'Inventories', admin_inventories_path %></li>
    <li class="superadmin"><%= link_to 'Categories', admin_categories_path %></li>
    <li class="superadmin"><%= link_to 'Orders', admin_orders_path %></li>
    <li class="superadmin"><%= link_to 'Statuses', admin_statuses_path %></li>
    <li class="superadmin"><%= link_to 'Users', admin_users_path %></li>
    <li class="superadmin"><%= link_to 'Roles', admin_roles_path %></li>
    <li class="superadmin"><%= link_to 'Addresses', admin_addresses_path %></li>
    <li class="superadmin"><%= link_to 'Warehouses', admin_warehouses_path %></li>
  <% end %>
  </ul>
</header>
<div class="alerts">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<div class="main-wrapper">
  <div class="main">
<%= yield %>
  </div>
</div>
<% if current_user.has_role?(:superadmin) %>
<footer>
  <p>user signed_in?: <%= debug user_signed_in? %></p>
  <p>current_user: <%= debug current_user%></p>
  <p>user_session: <%= debug user_session%></p>
</footer>
<% end %>
</body>
</html>
