<!DOCTYPE html>
<html>
<head>
  <title>Vynz</title>
  <%= stylesheet_link_tag    'admin', 'token-input-facebook', media: 'all' %>
  <script>
    var admin = true;
  </script>
  <%= javascript_include_tag 'application', 'jquery.tokeninput' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <ul class="top-menu left">
    <li><span>VYNZ Admin</span></li>
  <% if user_signed_in? %>
    <li><span><%= current_user.email %></span></li>
  <% end %>
  </ul>
  <ul class="top-menu right">
  <% if user_signed_in? %>
    <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
  <% end %>
    <li><%= link_to 'Home', home_index_path %></li>
  </ul>
  <ul class="main-menu">
    <li><%= link_to 'Producers', producers_path %></li>
    <li><%= link_to 'Regions', regions_path %></li>
    <li><%= link_to 'Sub-regions', subregions_path %></li>
    <li><%= link_to 'Grapes', grapes_path %></li>
    <li><%= link_to 'Types', types_path %></li>
    <li><%= link_to 'Bottlings', bottlings_path %></li>
    <li><%= link_to 'Maturations', maturations_path %></li>
    <li><%= link_to 'Allergies', allergies_path %></li>
    <li><%= link_to 'Notes', notes_path %></li>
    <li><%= link_to 'Foods', foods_path %></li>
    <li><%= link_to 'Occasions', occasions_path %></li>
    <li><%= link_to 'Appellations', appellations_path %></li>
    <li><%= link_to 'Wines', wines_path %></li>
  <% if current_user.has_role?(:superadmin) %>
    <li class="superadmin"><%= link_to 'Categories', categories_path %></li>
    <li class="superadmin"><%= link_to 'Orders', orders_path %></li>
    <li class="superadmin"><%= link_to 'Statuses', statuses_path %></li>
    <li class="superadmin"><%= link_to 'Users', users_path %></li>
    <li class="superadmin"><%= link_to 'Roles', roles_path %></li>
    <li class="superadmin"><%= link_to 'Addresses', addresses_path %></li>
    <li class="superadmin"><%= link_to 'Warehouses', warehouses_path %></li>
  <% end %>
  </ul>
</header>
<div class="alerts">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<div class="main-wrapper">
  <div class="main">
<%= yield %>
  </div>
</div>

<!-- <footer> -->
  <!-- <p>user signed_in?: <%# debug user_signed_in? %></p> -->
  <!-- <p>current_user: <%# debug current_user%></p> -->
  <!-- <p>user_session: <%# debug user_session%></p> -->
<!-- </footer> -->
</body>
</html>
