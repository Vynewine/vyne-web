<section id="availability" class="section section-dark app-section">
  <div class="section-background">
    <!-- IMAGE BACKGROUND -->
    <div class="section-background-image parallax-background" data-stellar-background-ratio="0.4"></div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12 col-xs-offset-0">
        <div class="animated fadeIn">
          <h3 class="app-title">
            Forgot your password?
          </h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
        <div class="">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                       html: { method: :post , class: 'translucent home-form'}) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.email_field :email,
                                  autofocus: true,
                                  :placeholder => 'example@gmail.com',
                                  :class => 'form-control' %>
              </div>

              <% flash.each do |name, msg| -%>
                  <%= content_tag :div, msg, class: name %>
              <% end %>

              <div class="form-group form-group-submit">
                <%= f.submit 'Reset password', :class => 'btn btn-primary btn-lg btn-block' %>
              </div>
              <%= render 'devise/shared/links' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
