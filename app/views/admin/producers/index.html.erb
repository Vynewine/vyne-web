<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        <h3 class="panel-title">Listing producers</h3>
      </div>
      <div class="col-md-6">
        <%= will_paginate @producers, :class => 'vyne_pagination' %>
      </div>
    </div>
  </div>

  <table class="table table-bordered">

    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Country</th>
      <th>Note</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @producers.each do |producer| %>
        <tr>
          <td><%= producer.id %></td>
          <td><%= producer.name %></td>
          <td><%= producer.country.name %></td>
          <td><%= producer.note %></td>
          <td class="button-wrapper">
            <%= link_to admin_producer_path(producer), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <ul class="list-group">
    <li class="list-group-item">
      <%= link_to 'New Producer', new_admin_producer_path, :class => 'btn btn-primary' %>
    </li>
  </ul>
</div>
