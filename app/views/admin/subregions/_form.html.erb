<%= form_for([:admin, @subregion]) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :region_id %><br>
    <%= f.select :region_id,
        options_from_collection_for_select(@regions, 'id', 'name', :selected => @subregion.region_id), {},
        {:prompt => 'Choose a region', :class => 'form-control'}
    %>
  </div>
  <div class="actions">
    <%= f.submit(:class => 'btn btn-success') %>
  </div>
<% end %>
