<%= render :partial => "layouts/winemenu" %>

<h1>Listing subregions</h1>
<%= link_to 'Upload', controller: 'subregions', action: 'upload' %><br/><br/><br/>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subregions.each do |subregion| %>
      <tr>
        <td><%= subregion.id %></td>
        <td><%= subregion.name %></td>
        <td><%= subregion.region.name %></td>
        <td class="button-wrapper">
          <%= link_to admin_subregion_path(subregion) do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_subregion_path(subregion) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_subregion_path(subregion), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subregion', new_admin_subregion_path %>
