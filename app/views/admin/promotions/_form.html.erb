<%= form_for([:admin, @promotion]) do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%=
          f.select :category, Promotion.categories.keys.to_a, {}, :class => 'form-control'
      %>
    </div>

    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
