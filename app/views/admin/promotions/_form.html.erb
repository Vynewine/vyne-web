<%= form_for([:admin, @promotion]) do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%=
          f.select :category, Promotion.categories.keys.to_a, {}, :class => 'form-control'
      %>
    </div>

    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>

    <div class="form-group">
      <%= f.label :new_accounts_only %>
      <%= f.check_box :new_accounts_only %>
    </div>

    <div class="form-group">
      <%= f.label :free_delivery %>
      <%= f.check_box :free_delivery %>
    </div>

    <div class="form-group">
      <%= f.label :extra_bottle %>
      <%= f.check_box :extra_bottle %>
    </div>

    <div class="form-group">
      <%= f.label :free_bottle_category_id, 'Free bottle category' %>
      <%= f.select :free_bottle_category_id,
                   content_tag(:option, 'N/A', :value => '')+
                           options_from_collection_for_select(@categories.order(:id),
                                                              'id',
                                                              'name_with_ranges',
                                                              :selected => @promotion.free_bottle_category_id),
                   {},
                   {:prompt => 'Choose a category', :class => 'form-control'}
      %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
