<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        <h3 class="panel-title">Listing regions</h3>
      </div>
      <div class="col-md-6">
        <%= will_paginate @regions, :class => 'vyne_pagination' %>
      </div>
    </div>
  </div>

  <table class="table table-bordered">

    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Country</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @regions.each do |region| %>
        <tr>
          <td><%= region.id %></td>
          <td><%= region.name %></td>
          <td><%= region.country.name %></td>
          <td class="button-wrapper">
            <%= link_to admin_region_path(region), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <ul class="list-group">
    <li class="list-group-item">
      <%= link_to 'New Region', new_admin_region_path, :class => 'btn btn-primary' %>
    </li>
  </ul>
</div>
