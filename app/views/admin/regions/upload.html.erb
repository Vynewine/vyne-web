<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Upload Regions</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h4>File Structure</h4>
      </div>
    </div>

    <ul>
      <li>Accepted File format: CSV</li>
      <li>First Row must specify column names</li>
      <li>Expected column names:</li>
      <ul>
        <li>
          <strong>region_id</strong> : Required.
        </li>
        <li>
          <strong>name</strong> : Required.
        </li>
        <li>
          <strong>country_id</strong> : Required.
        </li>
      </ul>
    </ul>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <%= form_tag({action: :import}, multipart: true,  class: 'form-inline') do %>
            <%= file_field_tag 'file', :class => 'form-control' %>
            <%= submit_tag('Upload', :class => 'btn btn-success') %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="panel-footer">
    <div class="row">
      <div class="col-md-12">
        <%= link_to admin_regions_path, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
        <% end %>
      </div>
    </div>
  </div>
</div>



