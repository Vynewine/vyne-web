<%= form_for([:admin, @region]) do |f| %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :country %><br>
      <%= f.select :country_id,
                   options_from_collection_for_select(@countries, 'id', 'name', :selected => @region.country_id), {},
                   {:prompt => 'Choose a country', :class => 'form-control'}
      %>
    </div>
    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
