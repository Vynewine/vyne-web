<div class="row">
  <div class="col-md-12">
    <h1>Editing Order <%= @order.id%></h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <%= render 'form' %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Show', [:admin, @order], { :class => 'btn btn-primary' } %>
        <%= link_to 'Back', admin_order_path(@order), { :class => 'btn btn-default' } %>

      </div>
      <div class="col-sm-2 text-right">
        <%= link_to admin_order_path(@order), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>






