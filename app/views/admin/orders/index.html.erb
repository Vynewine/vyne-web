<h1>Listing orders</h1>

<table border="1" class="list-table">
  <thead>
    <tr>
      <th></th>
      <th>Id</th>
      <th>Status</th>
      <th>Client</th>
      <th>Address</th>
      <th>Created</th>
      <th>Advisor</th>

    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="order <%= order.status.label.gsub( " ", "_" ) %>">
        <td class="button-wrapper">
          <%= link_to admin_order_path(order) do %>
              <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td><%= order.id %></td>

        <td><%= order.status.label %></td>
        <td>
          <% if order.client.blank? %>
          <strong>Client deleted</strong>
              <% else %>
          <%= order.client_id %> - <%= order.client.name %>
              <% end %>
        </td>
        <td><%= order.address.postcode %></td>
        <td><%= order.created_at %></td>
        <td><%= order.advisor ? order.advisor.name : '' %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_admin_order_path %>
