<%= render :partial => "layouts/winemenu" %>

<h1>Listing appellations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appellations.each do |appellation| %>
      <tr>
        <td><%= appellation.name %></td>
        <td class="button-wrapper">
          <%= link_to admin_appellation_path(appellation) do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_appellation_path(appellation) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_appellation_path(appellation), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appellation', new_admin_appellation_path %>
