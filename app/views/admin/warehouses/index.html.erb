<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Warehouses</h3>
  </div>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Active</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Registered with Shutl</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @warehouses.each do |warehouse| %>
        <tr>
          <td><%= warehouse.id %></td>
          <td>
            <%= link_to admin_warehouse_path(warehouse) do %>
                <%= warehouse.title %>
                <% end %>
          </td>
          <td><%= warehouse.active %></td>
          <td><%= warehouse.email %></td>
          <td><%= warehouse.phone %></td>
          <td>
            <% if warehouse.address %>
                <%= warehouse.address.full %>
            <% else %>
                -
            <% end %>
          </td>
          <td>
            <%= warehouse.registered_with_shutl == true %>
          </td>
          <td class="button-wrapper">
            <%= link_to admin_warehouse_path(warehouse), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </td>
        </tr>
    <% end %>

    </tbody>
  </table>

  <ul class="list-group">
    <li class="list-group-item">
      <%= link_to 'New Warehouse', new_admin_warehouse_path, :class => 'btn btn-primary' %>
    </li>
  </ul>
</div>
