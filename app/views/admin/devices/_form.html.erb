<%= form_for([:admin, @device]) do |f| %>

    <div class="form-group">
      <%= f.label :key %><br>
      <%= f.text_field :key, :class => 'form-control' %>
    </div>
    <div class="form-group">
      Warehouse<br>
      <% current_warehouse = @device.warehouse_id %>
      <%= f.select :warehouse_id,
                   options_from_collection_for_select(@warehouses, 'id', 'short_name', :selected => current_warehouse), {},
                   {:prompt => 'Choose a Warehouse', :class => 'form-control'}
      %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
