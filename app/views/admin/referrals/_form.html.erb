<%= form_for([:admin, @referral]) do |f| %>

    <div class="form-group">
      <%= f.label :promotion_code_id %><br>
      <%= f.text_field :promotion_code_id, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :existing_user_id %><br>
      <%= f.text_field :existing_user_id, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :referred_user_id %><br>
      <%= f.text_field :referred_user_id, :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
