<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        <h3 class="panel-title">Listing Grapes</h3>
      </div>
      <div class="col-md-6">
        <%= will_paginate @grapes, :class => 'vyne_pagination' %>
      </div>
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @grapes.each do |grape| %>
        <tr>
          <td><%= grape.id %></td>
          <td><%= grape.name %></td>
          <td class="button-wrapper">
            <%= link_to admin_grape_path(grape), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>

  </table>

  <ul class="list-group">
    <li class="list-group-item">
      <%= link_to upload_admin_grapes_path, class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></i> Upload
      <% end %>
      <%= link_to 'New Grape', new_admin_grape_path, :class => 'btn btn-primary' %>
    </li>
  </ul>
</div>
