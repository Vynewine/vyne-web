<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Upload Compositions</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h4>File Structure</h4>
      </div>
    </div>

    <ul>
      <li>Accepted File format: CSV</li>
      <li>First Row must specify column names</li>
      <li>Expected column names:</li>
      <ul>
        <li>
          <strong>composition_id</strong> : Required.
        </li>
        <li>
          <strong>name</strong> : Optional.
        </li>
        <li>
          <strong>grape1_id</strong> : Required.
        </li>
        <li>
          <strong>
            grape1_percentage, grape2_id, grape2_percentage, grape3_id, grape3_percentage
          </strong> etc... (up to 10) : Optional.
        </li>
      </ul>
    </ul>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <%= form_tag({action: :import}, multipart: true, class: 'form-inline') do %>
            <%= file_field_tag 'file', :class => 'form-control' %>
            <%= submit_tag('Upload', :class => 'btn btn-success') %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="panel-footer">
    <div class="row">
      <div class="col-md-12">
        <%= link_to admin_compositions_path, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back
        <% end %>
      </div>
    </div>
  </div>
</div>
