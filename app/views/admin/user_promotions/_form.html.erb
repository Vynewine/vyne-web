<%= form_for([:admin, @user_promotion]) do |f| %>

    <div class="form-group">
      <%= f.label :user_id %>
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :redeemed %>
      <%= f.check_box :redeemed %>
    </div>

    <div class="form-group">
      <%= f.label :can_be_redeemed %>
      <%= f.check_box :can_be_redeemed %>
    </div>

    <div class="form-group">
      <%= f.label :promotion_code_id %>
      <%= f.text_field :promotion_code_id, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :referral_id %>
      <%= f.text_field :referral_id, :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
