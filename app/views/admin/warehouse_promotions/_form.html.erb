<%= form_for [:admin, @promotion, @warehouse_promotion ] do |f| %>

    <div class="form-group">

      <%= f.label :warehouse %><br>

      <% current_warehouse = @warehouse_promotion.warehouse_id %>

      <%= f.select :warehouse_id,
                   options_from_collection_for_select(@warehouses, 'id', 'short_name', :selected => current_warehouse), {},
                   {:prompt => 'Choose a Warehouse', :class => 'form-control'}
      %>

    </div>

    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active %>
    </div>

    <div class="form-group">
      <%= f.label :extra_bottle_price_min %>
      <%= f.number_field :extra_bottle_price_min, in: 1.0..1000.0, step: 0.01, :class => 'form-control' %>
      <%= f.label :extra_bottle_price_max %>
      <%= f.number_field :extra_bottle_price_max, in: 1.0..1000.0, step: 0.01, :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
