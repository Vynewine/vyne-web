<%= form_for [:admin, @promotion, @warehouse_promotion ] do |f| %>

    <div class="form-group">

      <%= f.label :warehouse %><br>

      <% current_warehouse = @warehouse_promotion.warehouse_id %>

      <%= f.select :warehouse_id,
                   options_from_collection_for_select(@warehouses, 'id', 'title', :selected => current_warehouse), {},
                   {:prompt => 'Choose a Warehouse', :class => 'form-control'}
      %>

    </div>

    <div class="form-group">
      <%= f.label :active %><br>
      <%= f.check_box :active
      %>
    </div>

    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
