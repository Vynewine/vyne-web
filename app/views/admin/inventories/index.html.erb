

<h1>Inventory</h1>

<table>
  <tr>
    <td></td>
    <td><%= form_for :warehouse_id , :html => { :method => 'get'} do | f | %>
          <%= select_tag 'warehouse_id', content_tag(:option,'select one...',:value=>"")+options_from_collection_for_select(@warehouses, 'id', :short_name, params[:warehouse_id]) %>
          <%= f.submit :name => nil, :value => 'GO' %>
      <% end %></td>
    <td>
      <% unless @warehouse.blank? && @inventories.blank? %>
      Wine count for <%= @warehouse.title %>: <%= @inventories.count %>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to 'Upload', controller: 'inventories', action: 'upload' %>



<% unless @inventories.blank? %>

    <table border="1" class="list-table">
      <thead>
      <tr>
        <th>Vendor Sku</th>
        <th>Wine</th>
        <th>Category</th>
        <th>Cost</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @inventories.each do |inventory| %>
          <tr>
            <td><%= inventory.vendor_sku %></td>
            <td><%= inventory.wine.name %></td>
            <td><%= if inventory.category.nil? then ' - ' else inventory.category.name end %></td>
            <td><%= inventory.cost %></td>
            <td><%= inventory.quantity %></td>


            <td class="button-wrapper">
              <%= link_to admin_inventory_path(inventory) do %>
                  <i class="flaticon stroke zoom-1"></i>
              <% end %>
            </td>
            <td class="button-wrapper">
              <%= link_to edit_admin_inventory_path(inventory) do %>
                  <i class="flaticon stroke pencil-2"></i>
              <% end %>
            </td>
            <td class="button-wrapper">
              <%= link_to admin_inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="flaticon stroke trash-2"></i>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>


<br>

<%= link_to 'New Inventory Item', new_admin_inventory_path %>
