<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Inventory Item</h3>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Warehouse:</strong>
          <%= @inventory.warehouse.title %>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Wine:</strong>
          <%= @inventory.wine.full_info %>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Vendor SKU:</strong>
          <%= @inventory.vendor_sku %>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Quantity:</strong>
          <%= @inventory.quantity %>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Cost:</strong>
          &pound;<%= "%.2f" % @inventory.cost %>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-md-12">
          <strong>Category:</strong>
          <% if @inventory.category.blank? %>
              N/A
          <% else %>
              <%= @inventory.category.name %>
          <% end %>
        </div>
      </div>
    </li>
  </ul>
  <div class="panel-footer">
    <div class="row">
      <div class="col-xs-6">
        <%= link_to admin_inventories_path(:page => params[:page], :warehouse_id => @inventory.warehouse.id.to_s), class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back To Inventory
        <% end %>
        <%= link_to edit_admin_inventory_path(@inventory), class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
        <% end %>
      </div>
      <div class="col-xs-6 text-right">
        <%= link_to admin_inventory_path(@inventory), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
            <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>










