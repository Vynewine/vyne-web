<%= form_for([:admin, @locale]) do |f| %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :note %><br>
      <%= f.text_field :note, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :subregion_id %><br>
      <%= f.select :subregion_id,
                   options_from_collection_for_select(@subregions, 'id', 'name', :selected => @locale.subregion_id), {},
                   {:prompt => 'Choose a subregion', :class => 'form-control'}
      %>
    </div>
    <div class="actions">
      <%= f.submit(:class => 'btn btn-success') %>
    </div>
<% end %>
