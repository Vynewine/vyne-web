<%= render :partial => "layouts/winemenu" %>

<h1>Listing Locales</h1>
<%= link_to 'Upload', controller: 'locales', action: 'upload' %><br/><br/><br/>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Subregion</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locales.each do |locale| %>
      <tr>
        <td><%= locale.id %></td>
        <td><%= locale.name %></td>
        <td><%= locale.subregion.name %></td>
        <td><%= locale.note %></td>
        <td class="button-wrapper">
          <%= link_to admin_locale_path(locale) do %>
            <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_locale_path(locale) do %>
            <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_locale_path(locale), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New locale', new_admin_locale_path %>
