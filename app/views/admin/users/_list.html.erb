<h1>Users</h1>

<table border="1" class="list-table">
  <thead>
  <tr>
    <th>Id</th>
    <th>E-mail</th>
    <th>Name</th>
    <th>Mobile</th>
    <th>Stripe Id</th>
    <th>Roles</th>
    <% unless params[:show_deleted] %>
        <th colspan="3"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.mobile %></td>
        <td><%= user.stripe_id %></td>
        <td>
          <% if user.roles.blank? %>
              Limbo
          <% else %>
              <%= user.roles.map { |role| role.name }.join(',') %>
          <% end %>
        </td>
        <% unless params[:show_deleted] %>
            <td class="button-wrapper">
              <%= link_to admin_user_path(user) do %>
                  <i class="flaticon stroke zoom-1"></i>
              <% end %>
            </td>
            <td class="button-wrapper">
              <%= link_to edit_admin_user_path(user) do %>
                  <i class="flaticon stroke pencil-2"></i>
              <% end %>
            </td>
            <td class="button-wrapper">
              <%= link_to admin_user_path(user), method: :delete, data: {confirm: 'Are you sure?'} do %>
                  <i class="flaticon stroke trash-2"></i>
              <% end %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path %>

<%= link_to 'Show Deleted Users', admin_users_url(:show_deleted => true) %>
