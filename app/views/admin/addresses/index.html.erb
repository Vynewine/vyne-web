<h1>Listing addresses</h1>

<table border="1" class="list-table">
  <thead>
  <tr>
    <th>Id</th>
    <th>Line 1</th>
    <th>Line 2</th>
    <th>Postcode</th>
    <th>Company Name</th>
    <th>Coordinates</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
      <tr>
        <td><%= address.id %></td>
        <td><%= address.line_1 %></td>
        <td><%= address.line_2 %></td>
        <td><%= address.postcode %></td>
        <td><%= address.company_name %></td>
        <td>
          <% unless address.longitude.blank? %>
              lat: <%= address.latitude %>, lng: <%= address.longitude %>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_address_path(address) do %>
              <i class="flaticon stroke zoom-1"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to edit_admin_address_path(address) do %>
              <i class="flaticon stroke pencil-2"></i>
          <% end %>
        </td>
        <td class="button-wrapper">
          <%= link_to admin_address_path(address), method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="flaticon stroke trash-2"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_admin_address_path %>
